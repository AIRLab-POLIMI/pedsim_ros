<launch>
  <!-- params -->
  <arg name="teleop" default="false"/>
  <param name="/pedsim/scene_file" value="$(find pedsim_simulator)scenarios/scene1.xml" type="string"/>

  <!-- tf broadcaster for aligning frames -->
  <node name="simulator_tf_broadcaster" pkg="pedsim_simulator" type="dummy_transforms.py" respawn="false" output="log" />

  <!-- main simulator node -->
  <node name="simulator" pkg="pedsim_simulator" type="simulator" output="screen"/>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find pedsim_simulator)/rviz/scene1.rviz"/>


  <!-- RQT robot steering -->
  <node pkg="rqt_robot_steering" name="rqt_robot_steering" type="rqt_robot_steering" if="$(arg teleop)">
    <remap from="/cmd_vel" to="/spencer/control/drive_velocity"/>
  </node>

</launch>
